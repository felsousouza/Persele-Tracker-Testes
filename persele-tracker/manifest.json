{
  "manifest_version": 3,
  "name": "Coletor de Etiquetas Persele",
  "version": "1.0",

  "permissions": ["storage", "tabs", "notifications"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost:8000/*",
        "*://*/persele_lista.html*",
        "*://*/persele_imprimir.html*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
